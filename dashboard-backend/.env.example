# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Roblox Open Cloud API
# Get your API key from: https://create.roblox.com/credentials
# Required scopes: messaging-service.publish
ROBLOX_OPEN_CLOUD_API_KEY=your_open_cloud_api_key_here

# Roblox Universe ID (Experience ID)
# Find this in your game's configure page URL
# Example: https://create.roblox.com/dashboard/creations/experiences/1234567890/overview
# The Universe ID is 1234567890
ROBLOX_UNIVERSE_ID=your_universe_id_here

# Admin Command Secret (must match Roblox ServerStorage attribute)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# This MUST match the AdminCommandSecret attribute in Roblox ServerStorage
ADMIN_COMMAND_SECRET=your_32_character_or_longer_secret_here

# Admin Webhook Secret (must match Roblox ServerStorage attribute)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# This MUST match the AdminWebhookSecret attribute in Roblox ServerStorage
ADMIN_WEBHOOK_SECRET=your_32_character_or_longer_secret_here
